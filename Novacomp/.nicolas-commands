#!/bin/bash

function lets-work() {
  # Opens slack if --slack flag is added
  if [[ "$*" == *--no-teams* ]]
  then
  else
    cd /Applications && open 'Microsoft Teams.app' && cd ~
  fi
  
  # Opens VSCode with instatoolz web setup if --web is added
  if [[ "$*" == *--instatoolz-web* ]]
  then
    cd desktop && cd NovaComp/Appsketiers/instatoolz-fe && code . && cd ~
    osascript -e 'tell app "Terminal"
        do script "cd desktop && cd NovaComp/Appsketiers/instatoolz-fe && yarn start" 
    end tell'
    return
  fi

  # Opens VSCode with instatoolz app setup if --app is added
  if [[ "$*" == *--instatoolz-app* ]]
  then
    cd desktop && cd NovaComp/Appsketiers/instatoolz-app && code . && cd ~
    osascript -e 'tell app "Terminal"
        do script "cd desktop && cd NovaComp/Appsketiers/instatoolz-app && yarn run ios" 
    end tell'
  fi

  # Opens VSCode with core app setup if --app is added
  if [[ "$*" == *--core-app* ]]
  then
    cd desktop && cd NovaComp/Appsketiers/core_app && code . && cd ~
    osascript -e 'tell app "Terminal"
        do script "cd desktop && cd NovaComp/Appsketiers/core_app && npm run ios" 
    end tell'
  fi

}