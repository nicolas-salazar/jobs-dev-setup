#!/bin/bash

function lets-work() {
  # Opens slack if --slack flag is added
  if [[ "$*" == *--no-slack* ]]
  then
  else
    cd /Applications && open Slack.app && cd ~
  fi
  
  # Opens VSCode with browser setup if --browser is added
  if [[ "$*" == *--no-browser* ]]
  then
  else
    cd desktop && cd Hop/hopreact && code . && cd ~
    cd desktop && cd desktop/Hop/hopelectron && code . && cd ~
  fi

}